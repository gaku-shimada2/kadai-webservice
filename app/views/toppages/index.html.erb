<% if @products.any? %>
  <div class="container">
    <div class="row">
      <% @products.each do |product| %>
        <div class="col-md-3">
          <div class="card mb-3 shadow-sm">
            <%= link_to image_tag(product.image, class: "img-fluid"), product_path(product)  %>
            <img class="card-img-top">
            <div class="card-body">
              <p class="card-text"><%= product.name %><br><%= product.price %>å††</p>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
<% end %>