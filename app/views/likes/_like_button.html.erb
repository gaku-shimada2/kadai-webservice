<% if current_user.liking?(product) %>
    <%= form_with(model: current_user.likes.find_by(product_id: product.id), local: true, method: :delete) do |f| %>
        <%= hidden_field_tag :product_id, product.id %>
        <%= f.submit 'お気に入り解除', class: 'btn btn-secondary btn-block' %>
    <% end %>
<% else %>
    <%= form_with(model: current_user.likes.build, local: true) do |f| %>
        <%= hidden_field_tag :product_id, product.id %>
        <%= f.submit 'お気に入り', class: 'btn btn-outline-secondary btn-block' %>
    <% end %>
<% end %>